#!/bin/bash
# Remind to stop MacWhisper recording when Tuple call ends
# Tuple trigger: call-ended

CALLER="${TUPLE_TRIGGER_FULL_NAME:-someone}"

osascript -e "display notification \"Stop recording - call with $CALLER ended\" with title \"Tuple Call Ended\""
open -a MacWhisper

echo "$(date): Tuple call ended with $CALLER" >> ~/.tuple/triggers/triggers.log
