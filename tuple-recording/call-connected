#!/bin/bash
# Start MacWhisper recording when Tuple call connects
# Tuple trigger: call-connected

# Menu item name - update this after running discover-menu-items
MENU_ITEM="Start Recording"

osascript <<EOF
tell application "System Events"
    if not (exists process "MacWhisper") then
        return "MacWhisper not running"
    end if

    tell process "MacWhisper"
        click menu bar item 1 of menu bar 2
        delay 0.3
        click menu item "$MENU_ITEM" of menu 1 of menu bar item 1 of menu bar 2
    end tell
end tell
EOF

echo "$(date): Started MacWhisper recording for call with ${TUPLE_TRIGGER_FULL_NAME:-unknown}" >> ~/.tuple/triggers/triggers.log
