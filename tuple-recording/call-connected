#!/bin/bash
# Remind to start MacWhisper recording when Tuple call connects
# Tuple trigger: call-connected

CALLER="${TUPLE_TRIGGER_FULL_NAME:-someone}"

osascript -e "display notification \"Start recording for call with $CALLER\" with title \"Tuple Call Started\""
open -a MacWhisper

echo "$(date): Tuple call started with $CALLER" >> ~/.tuple/triggers/triggers.log
